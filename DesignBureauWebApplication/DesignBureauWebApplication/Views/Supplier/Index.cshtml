@using DesignBureauWebApplication.Models;
@using DesignBureauWebApplication.Data.Enum;
@*@using DesignBureauWebApplication.Extensions
@using DesignBureauWebApplication.ViewModels*@
@model IEnumerable<Supplier>

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}


<h2>Поставщики</h2>

<p>
    @Html.ActionLink("✚", "Create", new{}, new { @class="btn btn-primary" })
</p>
<table class="table table-hover table-responsive">
    <tr>
        <th>
            Поставщик
        </th>
        <th>
            Телефон
        </th>
        <th>
            Электронная почта
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.ActionLink("✏️", "Edit", new { id=item.SupplierId }, new { @class = "btn btn-primary" })
                @Html.ActionLink("🔍", "Details", new { id=item.SupplierId }, new { @class = "btn btn-success" })
                @Html.ActionLink("🗑️", "Delete", new { id=item.SupplierId }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>