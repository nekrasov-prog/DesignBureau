@{
}

<h2>Виды работ</h2>

<p>
    @Html.ActionLink("✚", "Create", new{}, new { @class = "btn btn-primary" })
</p>
<table class="table table-hover table-responsive">
    <tr>
        <th>
            Название работы
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.WorkTitle)
            </td>
            <td>
                @Html.ActionLink("✏️", "Edit", new { id = item.WorkDictionaryId }, new { @class = "btn btn-primary" })
                @Html.ActionLink("🔍", "Details", new { id = item.WorkDictionaryId }, new { @class = "btn btn-success" })
                @Html.ActionLink("🗑️", "Delete", new { id = item.WorkDictionaryId }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>