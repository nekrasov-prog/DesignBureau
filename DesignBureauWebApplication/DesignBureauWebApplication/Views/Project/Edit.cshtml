@using DesignBureauWebApplication.ViewModels;
@model ProjectViewModel

<h2>Редактировать проект</h2>
<hr />

<form method="post" asp-action="Edit">
    <input type="hidden" value="ProjectId" id="ProjectId" />
    <div class="form-group">
        <label asp-for="ProjectTitle">Название</label>
        <input asp-for="ProjectTitle" class="form-control" />
        <span asp-validation-for="ProjectTitle" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PlanStartDate">Дата начала</label>
        <input asp-for="PlanStartDate" class="form-control" />
        <span asp-validation-for="PlanStartDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PlanOverDate">Дата окончания</label>
        <input asp-for="PlanOverDate" class="form-control" />
        <span asp-validation-for="PlanOverDate" class="text-danger"></span>
    </div>
    <input type="hidden" asp-for="ProjectId" />
    @Html.ActionLink("←Назад", "Index", new {}, new { @class = "btn btn-secondary" })
    <button type="submit" class="btn btn-primary">Сохранить</button>
</form>