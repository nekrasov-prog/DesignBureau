@using DesignBureauWebApplication.ViewModels
@model OrderViewModel

<h2>Редактировать заказ</h2>
<hr />

<form method="post" asp-action="Edit">
    <input type="hidden" value="OrderId" id="OrderId" />
    <div class="form-group">
        <label asp-for="ContractNumber">Номер контракта</label>
        <input asp-for="ContractNumber" class="form-control" />
        <span asp-validation-for="ContractNumber" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="SupplierId">Поставщик</label>
        <select asp-for="SupplierId" asp-items="@Model.SupplierList" class="form-control"></select>
        <span asp-validation-for="SupplierId" class="text-danger"></span>
    </div>
    @Html.ActionLink("←Назад", "Index", new{ }, new { @class = "btn btn-secondary" })
    <button type="submit" class="btn btn-primary">Сохранить</button>
</form>