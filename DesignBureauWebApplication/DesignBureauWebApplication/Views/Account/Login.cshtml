@using DesignBureauWebApplication.ViewModels
@model LoginViewModel

@{
    ViewData["Title"] = "Вход";
    ViewData["IsLogin"] = true;
}
<div class="row">
    <div class="col-md-6 offset-3">
        <p>
            <h2 style="margin-left: -5%">Вход</h2>
        </p>
        @if (TempData["Error"] != null)
        {
            <div class="col-md-12 alert alert-danger">
                <span><b>Ошибка!</b> - @TempData["Error"]</span>
            </div>
        }
        <div class="row">
            <div>
                <form asp-action="Login">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="EmailAddress" class="control-label"></label>
                        <input asp-for="EmailAddress" class="form-control">
                        <span asp-validation-for="EmailAddress" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password" class="control-label">Пароль</label>
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input class="btn btn-outline-success float right" type="submit" value="Войти" />
@*                        <a class="btn btn-outline-secondary" asp-controller="Project" asp-action="Index">Отмена</a>
*@                    </div>
                </form>
            </div>
        </div>
    </div>
</div>