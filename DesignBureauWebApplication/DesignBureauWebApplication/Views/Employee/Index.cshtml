@model IEnumerable<DesignBureauWebApplication.Models.Employee>

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<h2>Сотрудники</h2>

<p>
    @Html.ActionLink("✚", "Create", new{}, new { @class="btn btn-primary" })
</p>
<table class="table table-hover table-responsive">
    <tr>
        <th>
            Сотрудник
        </th>
        <th>
            Должность
        </th>
        <th>
            Дата рождения
        </th>
        <th>
            Электронная почта
        </th>
        <th>
            Номер телефона
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ELastName) @Html.DisplayFor(modelItem => item.EFirstName) @Html.DisplayFor(modelItem => item.EPatronymic)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Position.JobTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BirthDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.ActionLink("✏️", "Edit", new { id=item.EmployeeId }, new { @class = "btn btn-primary" })
                @Html.ActionLink("🔍", "Details", new { id=item.EmployeeId }, new { @class = "btn btn-success" })
                @Html.ActionLink("🗑️", "Delete", new { id=item.EmployeeId }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>